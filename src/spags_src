// Fetch latest video from each channel using YouTube RSS
// Note: For this to work perfectly, you'd need a YouTube API key
// For now, we'll use the channel page embed which shows recent uploads

// Alternative: You can manually update video IDs here
const NBA_LATEST_VIDEO = ''; // e.g., 'dQw4w9WgXcQ'
const NFL_LATEST_VIDEO = '';

if(NBA_LATEST_VIDEO) {
  document.querySelector('#nba-video iframe').src = `https://www.youtube.com/embed/${NBA_LATEST_VIDEO}`;
}
if(NFL_LATEST_VIDEO) {
  document.querySelector('#nfl-video iframe').src = `https://www.youtube.com/embed/${NFL_LATEST_VIDEO}`;
}
